target 'Avitogram' do
  use_frameworks!

	#core
	pod 'Swinject', :git => 'https://github.com/Swinject/Swinject.git'
	pod 'PluggableAppDelegate'
	pod 'RxSwift'
	pod 'RxCocoa'
	
	#firebase services
	pod 'Firebase/Analytics'
	pod 'Firebase/Auth'
	pod 'Firebase/Firestore'
	
	#ui
	pod 'EasyPeasy'
	pod 'Toast-Swift', '~> 5.0.0'

end
